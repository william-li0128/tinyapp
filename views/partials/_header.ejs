<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if(!user){ %>
      <form class="form-inline justify-content-center" action="/login" method="POST">
        <div class="form-group mb-2">
          <input
            class="form-control"
            type="text"
            name="username"
            placeholder="Username"
            style="width: 300px; margin: 1em"
          />
          <button type="login" class="btn btn-outline-dark">Login</button>
        </div>
      </form> <!-- login button to store a name cookie  -->  
    <% } else{ %>  
      <form class="form-inline" action="/logout" method="POST">
        <div class="form-group mb-2">
          <label> <font size="+1"> Logged in as: <%= user.email %> </font> </label>
          <button style="margin-left:5px" type="logout" class="btn btn-outline-dark">Logout</button>
        </div>
      </form>
      <% } %>

  </nav>
</header>