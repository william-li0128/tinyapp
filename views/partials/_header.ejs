<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link align-right" href="/urls">My URLs</a>
        <a class="nav-item nav-link align-right" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <% if(!user){ %>
      <form>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-item nav-link" href="/login">Login</a>
            <a class="nav-item nav-link" href="/register">Register</a>
          </div>
        </div>
      </form>
    <% } else{ %>  
      <form class="form-inline" action="/logout" method="POST">
        <div class="form-group mb-2">
          <label> <strong> Logged in as: <%= user.email %> </strong> </label>
          <button style="margin-left:5px" type="logout" class="btn btn-outline-dark">Logout</button>
        </div>
      </form>
      <% } %>

  </nav>
</header>